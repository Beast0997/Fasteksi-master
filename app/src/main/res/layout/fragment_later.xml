<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="From:"
        android:layout_marginLeft="10dp"
        android:textColor="@color/textcolor" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <AutoCompleteTextView
            android:id="@+id/location"
            android:layout_width="0dp"
            android:layout_weight="0.75"
            android:hint="Enter Address here"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_gravity="right|center_vertical"
            android:textColor="@color/colorPrimary"
            android:textSize="17dp"
            android:background="@null"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_edit"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:linksClickable="true"
            android:textStyle="bold"
            android:text="@string/edit"
            android:textSize="17sp"
            android:textColor="@color/btn_sign" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="#DADADC" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To:"
        android:layout_marginLeft="10dp"
        android:textColor="@color/textcolor" />

    <AutoCompleteTextView
        android:id="@+id/edittxt_droparea"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/round_corner"
        android:hint="Enter drop off area(first 3 letter)"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DADADC" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:textSize="15dp"
        android:text="or select one from below"
        android:textColor="@color/textcolor" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="4dp"
        android:layout_gravity="center"
        android:background="@drawable/round_corner"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icon_home"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/home"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/text_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:singleLine="true"
                android:text="Home"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/text_homestatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:singleLine="true"
                android:text="No Address"
                android:textAppearance="?android:attr/textAppearanceSmall" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#DADADC" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icon_office"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/office"
                android:layout_gravity="center"
                android:paddingLeft="5dp" />

            <TextView
                android:id="@+id/text_office"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:singleLine="true"
                android:text="Office"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/text_officestatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:singleLine="true"
                android:text="No Address"
                android:textAppearance="?android:attr/textAppearanceSmall" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#DADADC" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icon_airpot"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/airportx"
                android:layout_gravity="center"
                android:paddingLeft="5dp" />

            <TextView
                android:id="@+id/text_airpot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:singleLine="true"
                android:text="Airpot"
                android:textAppearance="?android:attr/textAppearanceMedium" />

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#DADADC" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icon_favorties"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/stargreen"
                android:layout_gravity="center"
                android:paddingLeft="5dp" />

            <TextView
                android:id="@+id/text_favorties"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:singleLine="true"
                android:text="Favorties"
                android:textAppearance="?android:attr/textAppearanceMedium" />

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DADADC" />

    <CheckBox
        android:id="@+id/checkbox_retaincab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:hint="I would like to retain the cab"
        android:textColorHint="@color/textcolor"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#080000" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="40dp"
        android:background="#080000" />

    <Button
        android:id="@+id/btn_continue"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_gravity="right"
        android:background="@drawable/round_btncorner"
        android:text="Contiune" />

</LinearLayout>