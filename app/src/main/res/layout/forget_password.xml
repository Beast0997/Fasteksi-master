<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" >

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#080000" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="60dp"
        android:background="#080000" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/forgetpassword"
        android:layout_marginTop="40sp"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="@color/textcolor"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tell us your mobile number and we will SMS you the password."
        android:textStyle="normal"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/mobilenumber"
        android:layout_marginTop="20dp"
        android:textColor="@color/textcolor"
        android:textSize="25sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/etext_mobile_number"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:inputType="phone"
        android:background="@drawable/round_corner"
        android:layout_gravity="center"
        android:hint="Enter mobile number" />


    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30sp"
        android:background="@drawable/round_btncorner"
        android:text="SMS me the password"/>
</LinearLayout>